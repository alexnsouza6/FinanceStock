<div class="container">
  <%= render partial: 'friends/lookup' %>
  <% if @friendship.length > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="3" class="page-header"> <h2> My Friends </h2> </th>
        </tr>
        <tr>
          <th>First Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @friendship.each do |friend| %>
          <tr>
            <td> <%= friend.first_name %> </td>
            <td> <%= friend.email %> </td>
            <td> <%= link_to 'View Profile', user_path(friend.id), class: 'btn btn-success' %> </td>
            <td> <%= link_to 'Remove Friend', friendship_path(friend.id), method: :delete, class: 'btn btn-danger' %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h1> You have 0 friends. Try to add some! </h1>
  <% end %>
</div>